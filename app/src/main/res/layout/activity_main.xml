<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activiies.MainActivity">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textColor="#4a4a4a"
        android:textSize="28sp"
        android:textStyle="normal"
        android:text="Rewards" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_below="@+id/txt_heading"
        android:background="#913d88">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="21dp"
            android:src="@drawable/ic_trophy"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_confetti"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp">

            <ImageView
                android:id="@+id/img_rupee"
                android:layout_width="33dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_rupee"
                android:tint="#ffffff"/>

            <TextView
                android:id="@+id/txt_ruppe_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="308217"
                android:textColor="#ffffff"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif-medium"
            android:text="Total Earned"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="wrap_content"
        android:layout_height="333dp"
        android:layout_below="@id/rl_header"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:gravity="center"
        android:background="@drawable/card_background">

        <LinearLayout
            android:id="@+id/card_data_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="5840" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/card_data_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/card_data_1"
            android:background="@drawable/card_blue_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Scratch " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_rupee"
                    android:tint="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="9 to 49"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/card_data_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_toEndOf="@id/card_data_2"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="5840" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/card_data_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/card_data_1"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_red_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Scratch " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="9 to 49"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/card_data_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:layout_toEndOf="@id/card_data_4"
            android:layout_below="@id/card_data_2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="5840" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/card_data_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/card_data_3"
            android:layout_toEndOf="@id/card_data_5"
            android:background="@drawable/card_green_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:text="This Bonus Scratch Card sill Open on 15/12/2018" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/card_data_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/card_data_4"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="5840" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/card_data_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:layout_below="@id/card_data_5"
            android:layout_toEndOf="@id/card_data_7"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="5840" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/card_data_9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/card_data_6"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/card_data_8"
            android:background="@drawable/card_red_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Scratch " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="9 to 49"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_see_offer"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="160dp"
        android:layout_height="39dp"
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true"
        android:text="See Offer"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/see_offer_btn_back"
        android:textAlignment="center"
        android:layout_below="@id/rl_middle"/>
</RelativeLayout>